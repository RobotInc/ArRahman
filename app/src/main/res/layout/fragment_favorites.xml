<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:backgroundTint="@null"
    tools:context="com.bss.arrahmanlyrics.Fragments.favorites">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.ads.NativeExpressAdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adUnitId="ca-app-pub-2287984365462163/1832785536"
            ads:adSize="320x150">
        </com.google.android.gms.ads.NativeExpressAdView>

    <!-- TODO: Update blank fragment layout -->
    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
        android:id="@+id/favoriteSongPlayList"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:clickable="true"
        android:fadeScrollbars="true"
        app:fastScrollAutoHide="true"
        app:fastScrollAutoHideDelay="1500"
        app:fastScrollPopupBackgroundSize="64dp"
        app:fastScrollPopupBgColor="@color/colorAccent"
        app:fastScrollPopupTextColor="@android:color/primary_text_dark"
        app:fastScrollPopupTextSize="44sp"
        app:fastScrollThumbColor="@android:color/holo_orange_light"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
