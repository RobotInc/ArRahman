<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bss.arrahmanlyrics.Fragments.albums">

    <!-- TODO: Update blank fragment layout -->
    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
        android:id="@+id/albumrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"

        app:fastScrollAutoHide="true"
        app:fastScrollAutoHideDelay="1500"
        app:fastScrollPopupBackgroundSize="64dp"
        app:fastScrollThumbColor="@android:color/holo_orange_light"
        app:fastScrollPopupTextColor="@android:color/primary_text_dark"
        app:fastScrollPopupTextSize="44sp"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

</FrameLayout>
