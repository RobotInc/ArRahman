<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/item_view"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingTop="10dp">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="65dp"
        android:id="@+id/favsongCover"
        android:layout_height="65dp"
        android:src="@drawable/ic_launcher"
        app:civ_border_color="#ffffff"
        app:civ_border_width="2dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="2"
        app:civ_shadow_color="#8BC34A"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="10dp"
        android:id="@+id/songdetails"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.bss.arrahmanlyrics.utils.lyricsTextView
            android:id="@+id/favSongtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="SONG TITLE"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        <com.bss.arrahmanlyrics.utils.lyricsTextView
            android:id="@+id/favMovietitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:text="Movie Title"
            android:textColor="#a000ffae"
            android:textSize="14sp"/>
        <com.bss.arrahmanlyrics.utils.lyricsTextView
            android:id="@+id/favSonglyricist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:text="Song Lyricist"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="14sp"/>

    </LinearLayout>
    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/ripple"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:srcCompat="@drawable/ic_menu"/>



</LinearLayout>